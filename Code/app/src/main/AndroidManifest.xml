<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilibrary">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.mobilibrary.Activity.SignUp"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.example.mobilibrary.Activity.LogIn"/>

        <activity
            android:name="com.example.mobilibrary.Activity.LogIn"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.mobilibrary.MainActivity"
            android:label="MainActivity" />

        <activity android:name="com.example.mobilibrary.AddBookFragment"
            android:label="@string/title_activity_add_book_fragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.mobilibrary.BookDetailsFragment"
            android:label="@string/title_activity_book_detail_fragment"
            android:parentActivityName="com.example.mobilibrary.MyBooksFragment"/>
        <activity android:name="com.example.mobilibrary.EditBookFragment"
            android:label="@string/title_activity_edit_book_fragment"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.mobilibrary.BookDetailsFragment"/>

        <!--
          <activity
            android:name="com.example.mobilibrary.MyBooks"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        -->
        
        <activity android:name=".Activity.ProfileActivity" />
    </application>

</manifest>

