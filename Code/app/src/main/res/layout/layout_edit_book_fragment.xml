<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8C7AA">

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="#4EBC21"
        android:text="CONFIRM"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_to_view_button"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#A18E6D"
        android:scaleType="centerInside"
        app:fabCustomSize="50dp"
        app:srcCompat="@drawable/abc_vector_test" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_scan_button"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#D8C7AA"
        app:maxImageSize="45dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_image_button"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="179dp"
        android:clickable="true"
        android:backgroundTint="#00D8C7AA"
        app:maxImageSize="45dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_image_button"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_toEndOf="@+id/edit_image_button"
        android:clickable="true"
        app:backgroundTint="#00D8C7AA"
        app:maxImageSize="45dp"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="182dp"
        android:layout_height="235dp"
        android:layout_above="@+id/title_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="166dp"
        android:background="#A18E6D"
        android:foregroundTint="#7AFFFFFF"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="398dp"
        android:text="Title"
        android:textColor="#675C40"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/author_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginBottom="273dp"
        android:text="Author"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ISBN_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="173dp"
        android:text="ISBN"
        android:textColor="#675C40"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="309dp"
        android:background="#B3A894"
        android:hint="Enter Title"
        android:inputType="text"
        android:shadowColor="#CCFA00"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_author"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_above="@+id/edit_isbn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="73dp"
        android:background="#B3A894"
        android:hint="Enter Author"
        android:inputType="text"
        android:shadowColor="#CCFA00"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_isbn"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:layout_above="@+id/confirm_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="28dp"
        android:background="#B3A894"
        android:hint="Enter ISBN"
        android:inputType="number"
        android:shadowColor="#CCFA00"
        android:textSize="20sp" />

</RelativeLayout>