<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="34dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_generic_avatar"
        tools:srcCompat="@drawable/ic_generic_avatar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/acceptRequestBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/ic_green_tick"
        />

    <ImageButton
        android:id="@+id/declineRequestBtn"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@android:drawable/ic_delete"
        android:src="@android:drawable/ic_delete"
        tools:srcCompat="@android:drawable/ic_delete" />

</LinearLayout>
